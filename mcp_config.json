{
  "mcpServers": {
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--mount", "type=bind,source=${MCP_WORKING_DIR},target=/mcp",
        "mcp/filesystem",
        "/mcp"
      ],
      "env": {
        "MCP_WORKING_DIR": "${MCP_WORKING_DIR}"
      }
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e", "GITHUB_TOKEN=${GITHUB_TOKEN}",
        "mcp/github"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}
