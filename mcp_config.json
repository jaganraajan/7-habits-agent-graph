{
  "mcpServers": {
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--mount", "type=bind,source=${MCP_WORKING_DIR},target=/mcp",
        "mcp/filesystem",
        "/mcp"
      ],
      "env": {
        "MCP_WORKING_DIR": "${MCP_WORKING_DIR}"
      }
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e", "GITHUB_TOKEN=${GITHUB_TOKEN}",
        "mcp/github"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "vision": {
      "command": "python",
      "args": [
        "mcp_servers/vision/server.py"
      ],
      "env": {
        "AZURE_OPENAI_API_KEY": "${AZURE_OPENAI_API_KEY}",
        "AZURE_OPENAI_ENDPOINT": "${AZURE_OPENAI_ENDPOINT}",
        "AZURE_OPENAI_DALLE_DEPLOYMENT": "${AZURE_OPENAI_DALLE_DEPLOYMENT:-dall-e-3}",
        "DATA_DIR": "${MCP_WORKING_DIR}"
      }
    },
    "todo": {
      "transport": "sse",
      "url": "http://localhost:3000/mcp"
    }
  }
}
